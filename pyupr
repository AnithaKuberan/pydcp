#!/usr/local/bin/python

import argparse
import logging
import unittest

from unit import *

def run_upr_testsuite():
    upr_suite = unittest.TestLoader().loadTestsFromTestCase(UprTestCase)
    unittest.TextTestRunner(verbosity=2).run(upr_suite)

def run_mcd_testsuite():
    mcd_suite = unittest.TestLoader().loadTestsFromTestCase(McdTestCase)
    unittest.TextTestRunner(verbosity=2).run(mcd_suite)

def run_testsuite(suite):
    if suite == 'all':
        run_upr_testsuite()
        run_mcd_testsuite()
    elif suite == 'upr':
        run_upr_testsuite()
    elif suite == 'mcd':
        run_mcd_testsuite()
    else:
        print "Bad Testsuite '%s'" % suite

def set_log_level(level):
    print level
    if level == None:
        logging.basicConfig(level=logging.ERROR)
    elif level == 1:
        logging.basicConfig(level=logging.WARNING)
    elif level == 2:
        logging.basicConfig(level=logging.INFO)
    else:
        logging.basicConfig(level=logging.DEBUG)

def main():
    parser = argparse.ArgumentParser(description='Upr unit test framework')

    parser.add_argument('-s', '--suite', default='all',
                    help='testsuite to execute')
    parser.add_argument('-v', '--verbosity', action='count',
                        help='verbosity level')

    args = parser.parse_args()
    set_log_level(args.verbosity)
    run_testsuite(args.suite)

if __name__ == "__main__":
    main()
